<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liked Cats</title>
    <link rel="stylesheet" href="main.css">
    <style>
        /* Basic styling for the cat blocks */
        .cat-block {
            border: 1px solid #ccc;
            padding: 20px;
            margin-bottom: 20px;
            background-color: white;
        }
        #cat-image-element {
            float: left;
            padding: 20px;
            margin-top: 2vw;
            margin-right: 20px; /* Adjust spacing between image and text */
        }
        h2, p, form {
            margin-left: 20px; /* Add spacing to the left of text elements */
        }
        h2 {
            margin-top: 3vw;
        }

        form {
            clear: both; /* Clear the float to ensure the form appears below the image */
        }



    </style>
</head>
<body>
    <div class="header">
   <h1><img src="ProjektiLogo.png" alt="Logo JoVaNa" id="logo"></h1>
    <nav>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/likedcats.hbs">Liked Cats</a></li>
        </ul>
    </nav>
</div>

    <div id="cat-container">
        <!-- Liked cats data will be dynamically inserted here -->
    </div>

 <script>
        // Function to handle form submission
        const handleFormSubmit = async (event) => {
            event.preventDefault(); // Prevent the default form submission

            const form = event.target; // Get the form element
            const emailInput = form.querySelector('#emailInput'); // Get the email input field

            // Extract cat data from hidden fields
            const breed = form.querySelector('input[name="breed"]').value;
            const description = form.querySelector('input[name="description"]').value;
            const origin = form.querySelector('input[name="origin"]').value;
            const imageUrl = form.querySelector('input[name="imageUrl"]').value;

            // Extract email value
            const email = emailInput.value;

            try {
                // Send email data to the server
                const response = await fetch("/submit-form", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify({
                        email,
                        breed,
                        description,
                        origin,
                        imageUrl
                    })
                });

                if (response.ok) {
                    // Display success message
                    const confirmationMessage = document.createElement('span');
                    confirmationMessage.textContent = 'Email sent';
                    emailInput.insertAdjacentElement('afterend', confirmationMessage);

                    // Optionally, you can clear the email input field after sending
                    emailInput.value = '';
                } else {
                    throw new Error("Failed to send email");
                }
            } catch (error) {
                console.error("Error sending email:", error);

                // Display error message
                const errorMessage = document.createElement('span');
                errorMessage.textContent = 'Failed to send email';
                errorMessage.style.color = 'red'; // Optional: style the error message
                emailInput.insertAdjacentElement('afterend', errorMessage);
            }
        };

        // Fetch liked cats data when the page loads
        window.addEventListener("load", () => {
            fetch("/api/liked-cats")
                .then((response) => response.json())
                .then((data) => {
                    // Iterate over each liked cat and create HTML elements to display them
                    data.forEach((cat) => {
                        const catContainer = document.getElementById("cat-container");

                        // Create a div element for the cat block
                        const catBlock = document.createElement("div");
                        catBlock.classList.add("cat-block");

                        // Create HTML content for the cat block
                        const catContent = `
                            <img id="cat-image-element" src="${cat.imageUrl}" alt="Cat">
                            <h2>${cat.breed}</h2>
                            <p>${cat.description}</p>
                            <p>Origin: ${cat.origin}</p>
                            <form onsubmit="handleFormSubmit(event)">
                                <input type="hidden" name="breed" value="${cat.breed}">
                                <input type="hidden" name="imageUrl" value="${cat.imageUrl}">
                                <input type="hidden" name="description" value="${cat.description}">
                                <input type="hidden" name="origin" value="${cat.origin}">
                                
                                <div>
                                    <label for="emailInput">Email:</label>
                                    <input type="email" id="emailInput" name="email" required>
                                </div>
                                <button type="submit">Send Email</button>
                            </form>
                        `;

                        // Set the HTML content to the cat block
                        catBlock.innerHTML = catContent;

                        // Append the cat block to the cat container
                        catContainer.appendChild(catBlock);
                    });
                })
                .catch((error) => console.error("Error fetching liked cats:", error));
        });
    </script>
</body>
</html>